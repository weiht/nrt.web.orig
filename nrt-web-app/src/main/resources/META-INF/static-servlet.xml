<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
    	http://www.springframework.org/schema/context/spring-context.xsd
    	http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:resources mapping="/css/**" location="#{systemProperties['repo.dir']}/static/css/" />
    <mvc:resources mapping="/js/**" location="#{systemProperties['repo.dir']}/static/js/" />
    <mvc:resources mapping="/fonts/**" location="#{systemProperties['repo.dir']}/static/fonts/" />
    <mvc:resources mapping="/images/**" location="#{systemProperties['repo.dir']}/static/images/" />

</beans>
